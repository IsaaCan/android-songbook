<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    android:id="@+id/fileItemLayout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal">

    <ImageView
        android:id="@+id/songImage"
        android:layout_width="22dp"
        android:layout_height="22dp"
        android:layout_centerVertical="true"
        android:layout_gravity="start|center_vertical"
        android:layout_marginLeft="2dp"
        android:layout_marginStart="2dp"
        android:background="@drawable/note"
        android:clickable="false"
        android:focusable="false"
        android:scaleType="fitCenter"/>

    <TextView
        android:id="@+id/itemSongTitleLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_gravity="start|center_vertical"
        android:layout_marginLeft="4dp"
        android:layout_marginStart="4dp"
        android:layout_marginBottom="7dp"
        android:layout_marginTop="7dp"
        android:layout_toEndOf="@+id/songImage"
        android:layout_toRightOf="@+id/songImage"
        android:layout_toLeftOf="@+id/itemSongEditButton"
        android:layout_toStartOf="@+id/itemSongEditButton"
        android:gravity="start|center_vertical"
        android:text=""
        android:textSize="16sp"/>

    <ImageButton
        android:id="@+id/itemSongEditButton"
        android:layout_gravity="end|center_vertical"
        android:src="@drawable/edit"
        android:background="?android:selectableItemBackground"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:focusable="false"
        android:scaleType="centerInside"
        android:adjustViewBounds="true"
        android:layout_marginRight="4dp"
        android:layout_marginEnd="4dp"/>

</RelativeLayout>