<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_horizontal"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    android:padding="0dp">

    <Space
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.7"/>

    <TextView
        android:id="@+id/transposedByLabel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.1"
        android:gravity="bottom|center_horizontal"
        android:text="@string/transposed_by"
        android:textAlignment="center"
        android:textColor="@color/colorQuickMenuText"
        android:textSize="20sp"
        android:textStyle="normal|bold"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.1"
        android:orientation="horizontal"
        android:padding="0dp">

        <Button
            android:id="@+id/btnTransposeM5"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginBottom="-2dp"
            android:layout_marginLeft="-2dp"
            android:layout_marginRight="-2dp"
            android:layout_marginTop="-2dp"
            android:layout_weight="1"
            android:text="-5"
            />

        <Button
            android:id="@+id/btnTransposeM1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginBottom="-2dp"
            android:layout_marginLeft="-2dp"
            android:layout_marginRight="-2dp"
            android:layout_marginTop="-2dp"
            android:layout_weight="1"
            android:text="-1"
            />

        <Button
            android:id="@+id/btnTranspose0"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginBottom="-2dp"
            android:layout_marginLeft="-2dp"
            android:layout_marginRight="-2dp"
            android:layout_marginTop="-2dp"
            android:layout_weight="1"
            android:text="0"
            />

        <Button
            android:id="@+id/btnTransposeP1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginBottom="-2dp"
            android:layout_marginLeft="-2dp"
            android:layout_marginRight="-2dp"
            android:layout_marginTop="-2dp"
            android:layout_weight="1"
            android:text="+1"
            />

        <Button
            android:id="@+id/btnTransposeP5"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginBottom="-2dp"
            android:layout_marginLeft="-2dp"
            android:layout_marginRight="-2dp"
            android:layout_marginTop="-2dp"
            android:layout_weight="1"
            android:text="+5"
            />

    </LinearLayout>

    <Button
        android:id="@+id/btnAutoscrollToggle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="-2dp"
        android:layout_marginLeft="-2dp"
        android:layout_marginRight="-2dp"
        android:layout_marginTop="-2dp"
        android:layout_weight="0.1"
        android:text="@string/autoscroll"
        />

</LinearLayout>