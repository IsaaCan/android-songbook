<?xml version="1.0" encoding="utf-8"?>


<LinearLayout android:id="@+id/songPreviewLinearLayout"
              xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:layout_gravity="center_horizontal"
              android:fillViewport="true"
              android:orientation="vertical">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/appBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary">

            <LinearLayout android:id="@+id/toolbarVerticalLayout"
                          xmlns:android="http://schemas.android.com/apk/res/android"
                          android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:fillViewport="true"
                          android:orientation="vertical"
                          android:padding="0dp">

                <LinearLayout android:id="@+id/toolbarHorizontalLayout"
                              xmlns:android="http://schemas.android.com/apk/res/android"
                              android:layout_width="match_parent"
                              android:layout_height="40dp"
                              android:fillViewport="true"
                              android:orientation="horizontal"
                              android:padding="0dp">

                    <ImageButton
                        android:id="@+id/navMenuButton"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:layout_centerVertical="true"
                        android:layout_gravity="start|center_vertical"
                        android:adjustViewBounds="true"
                        android:background="@drawable/menu"
                        android:clickable="true"
                        android:focusable="true"
                        android:padding="16dp"
                        android:scaleType="fitCenter"
                        />

                    <ImageButton
                        android:id="@+id/goBackButton"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:layout_centerVertical="true"
                        android:layout_gravity="start|center_vertical"
                        android:layout_marginLeft="20dp"
                        android:layout_marginStart="20dp"
                        android:adjustViewBounds="true"
                        android:background="@drawable/arrow_back"
                        android:clickable="true"
                        android:focusable="true"
                        android:padding="16dp"
                        android:scaleType="fitCenter"/>

                    <ImageButton
                        android:id="@+id/songInfoButton"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:layout_centerVertical="true"
                        android:layout_gravity="start|center_vertical"
                        android:layout_marginLeft="20dp"
                        android:layout_marginStart="20dp"
                        android:adjustViewBounds="true"
                        android:background="@drawable/info"
                        android:clickable="true"
                        android:focusable="true"
                        android:padding="16dp"
                        android:scaleType="fitCenter"/>

                    <ImageButton
                        android:id="@+id/transposeButton"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:layout_centerVertical="true"
                        android:layout_gravity="start|center_vertical"
                        android:layout_marginLeft="20dp"
                        android:layout_marginStart="20dp"
                        android:adjustViewBounds="true"
                        android:background="@drawable/transpose"
                        android:clickable="true"
                        android:focusable="true"
                        android:padding="16dp"
                        android:scaleType="fitCenter"/>

                    <ImageButton
                        android:id="@+id/autoscrollButton"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:layout_centerVertical="true"
                        android:layout_gravity="start|center_vertical"
                        android:layout_marginLeft="20dp"
                        android:layout_marginStart="20dp"
                        android:adjustViewBounds="true"
                        android:background="@drawable/scroll1"
                        android:clickable="true"
                        android:focusable="true"
                        android:padding="16dp"
                        android:scaleType="fitCenter"/>

                    <ImageButton
                        android:id="@+id/goBeginningButton"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:layout_centerVertical="true"
                        android:layout_gravity="start|center_vertical"
                        android:layout_marginLeft="20dp"
                        android:layout_marginStart="20dp"
                        android:adjustViewBounds="true"
                        android:background="@drawable/restore"
                        android:clickable="true"
                        android:focusable="true"
                        android:padding="16dp"
                        android:scaleType="fitCenter"/>

                    <ImageButton
                        android:id="@+id/fullscreenButton"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:layout_centerVertical="true"
                        android:layout_gravity="start|center_vertical"
                        android:layout_marginLeft="20dp"
                        android:layout_marginStart="20dp"
                        android:adjustViewBounds="true"
                        android:background="@drawable/fullscreen1"
                        android:clickable="true"
                        android:focusable="true"
                        android:padding="16dp"
                        android:scaleType="fitCenter"/>

                </LinearLayout>

                <TextView
                    android:id="@+id/songTitleLabel"
                    android:layout_width="match_parent"
                    android:layout_height="24dp"
                    android:layout_marginLeft="0dp"
                    android:layout_marginStart="0dp"
                    android:paddingTop="0dp"
                    android:textSize="16sp"
                    />

            </LinearLayout>

        </android.support.v7.widget.Toolbar>
    </android.support.design.widget.AppBarLayout>

    <android.support.design.widget.CoordinatorLayout
        android:id="@+id/coordinator_layout"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <FrameLayout android:id="@+id/songPreviewContainer"
                     xmlns:android="http://schemas.android.com/apk/res/android"
                     android:layout_width="match_parent"
                     android:layout_height="match_parent"
                     android:fillViewport="true">
            <!-- Song Preview -->
        </FrameLayout>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/overlayRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true"
            android:scrollbars="vertical"/>

        <FrameLayout android:id="@+id/quickMenuContainer"
                     xmlns:android="http://schemas.android.com/apk/res/android"
                     android:layout_width="match_parent"
                     android:layout_height="match_parent"
                     android:fillViewport="true">
            <!-- Quick Menu -->
        </FrameLayout>

    </android.support.design.widget.CoordinatorLayout>

</LinearLayout>
