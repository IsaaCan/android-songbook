<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/mainLayout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_horizontal"
    android:orientation="vertical">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/appBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary">

            <ImageButton
                android:id="@+id/navMenuButton"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_centerVertical="true"
                android:layout_gravity="start|center_vertical"
                android:adjustViewBounds="true"
                android:background="@drawable/menu"
                android:clickable="true"
                android:focusable="true"
                android:padding="10dp"
                android:scaleType="fitCenter"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/ui_contact"
                android:textSize="18sp"
                android:layout_marginLeft="20dp"
                android:layout_marginStart="20dp"/>

        </android.support.v7.widget.Toolbar>

    </android.support.design.widget.AppBarLayout>

    <TextView
        android:id="@+id/contactText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/ui_contact_content"
        android:gravity="bottom"
        android:textSize="18sp"
        android:layout_margin="8dp"/>

    <EditText
        android:id="@+id/contactMessageEdit"
        android:layout_width="match_parent"
        android:layout_height="240dp"
        android:inputType="text|textMultiLine"
        android:gravity="top"
        android:hint="@string/contact_message_hint"
        android:layout_margin="8dp"/>

    <EditText
        android:id="@+id/contactAuthorEdit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:gravity="top"
        android:hint="@string/contact_author_hint"
        android:layout_margin="8dp"/>

    <Button
        android:id="@+id/contactSendButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/contact_send"
        android:layout_margin="8dp"/>

</LinearLayout>
